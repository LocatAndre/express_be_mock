generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bundle {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  path   String
  active Boolean @default(false)

  createAt  DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  Item      Item[]
}

model Item {
  id        Int       @id @default(autoincrement())
  unityName String
  type      String
  tier      String?
  active    Boolean   @default(false)
  timeLimit DateTime?
  price     Float     @default(0.00)
  limit     Int       @default(100)
  name      Json?
  thumbnail Json?

  createAt  DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  Bundle   Bundle? @relation(fields: [bundleId], references: [id])
  bundleId Int?

  traits Trait[]

  @@unique([id, unityName])
}

model Trait {
  id     Int     @id @default(autoincrement())
  name   Json
  active Boolean @default(false)

  createAt  DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  items Item[]
}
